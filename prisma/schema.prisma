generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  title   String
  content String

  @@map("posts")
}

model User {
  id        String   @id
  createdAt DateTime
  updatedAt DateTime

  name               String?
  email              String  @unique
  applicationStarted Boolean @default(false)
  emailVerified      Boolean
  image              String?

  sessions     Session[]
  accounts     Account[]
  applications Application[]

  @@map("users")
}

model Session {
  id        String   @id
  createdAt DateTime
  updatedAt DateTime

  expiresAt DateTime
  token     String   @unique
  ipAddress String?
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Account {
  id        String   @id
  createdAt DateTime
  updatedAt DateTime

  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("accounts")
}

model Application {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name                 String
  email                String  @unique
  school               String
  graduationYear       String
  resumeFile            String
  applicationSubmitted Boolean

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("applications")
}

