{
  "name": "beaverhacks-monorepo",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter \"./apps/*\" dev",
    "dev:beaverhacks": "pnpm --filter beaverhacks dev -- -p 3000",
    "dev:shop": "pnpm --filter shop dev -- -p 3001",
    "dev:judge": "pnpm --filter judge dev -- -p 3002",
    "dev:career": "pnpm --filter career dev -- -p 3003",
    "build": "pnpm --filter \"./apps/*\" build",
    "db:generate": "pnpm --filter @repo/database db:generate",
    "db:push": "pnpm --filter @repo/database db:push",
    "db:migrate": "pnpm --filter @repo/database db:migrate",
    "db:studio": "pnpm --filter @repo/database db:studio",
    "db:format": "pnpm --filter @repo/database db:format"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.9",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
